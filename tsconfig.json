{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "es2017",
    "module": "commonjs",
    "allowJs": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src", "typings"]
}
